<Window x:Class="gui_login.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="login" Height="400" Width="600">
    <Grid>
        <Image x:Name="image"  HorizontalAlignment="Left" Height="100" Margin="240,20,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="-0.105,0.209" ToolTip="userimage" >
        </Image>
        <GroupBox Header="Log in" Margin="100,140,100,20">
            <Canvas>
                <Button Content="Wachtwoord vergeten" HorizontalAlignment="Left" VerticalAlignment="Top" Width="141" RenderTransformOrigin="-0.19,-7.079" Canvas.Left="115" Canvas.Top="126" Click="Button_Click"/>
                <Button x:Name="registerButton" Content="Registreren" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.137,0.28" Canvas.Left="20" Canvas.Top="126" Click="registerButton_Click"/>
                <PasswordBox HorizontalAlignment="Left" Height="23" VerticalAlignment="Top" Width="120" Canvas.Left="179" Canvas.Top="59"/>
                <TextBox x:Name="logintextbox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Canvas.Left="179" Canvas.Top="13"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Gebruikersnaam:" VerticalAlignment="Top" Canvas.Left="44" Canvas.Top="20"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Wachtwoord:" VerticalAlignment="Top" Canvas.Left="44" Canvas.Top="66"/>
                <Button x:Name="logInButton" Content="log in" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Canvas.Left="282" Canvas.Top="126" Click="logInButton_Click"/>
            </Canvas>
        </GroupBox>

    </Grid>
</Window>
